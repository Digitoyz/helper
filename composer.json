{
  "name": "digitoyz/helper",
  "description": "Digitoyz Main Helper",
  "license": "MIT",
  "authors": [
    {
      "name": "Saikaze",
      "email": "saikaze@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "require": {
    "php": ">=5.3.0",
    "joshcam/mysqli-database-class": "^2.5",
    "phpmailer/phpmailer": "~5.2"
  },
  "autoload": {
    "files": ["src/helper.class.php"]
  },
  "scripts": {
    "post-update-cmd": [
      "mkdir -p config",
      "cp -R digitoyz/helper/src/config/default.php config/helperConfig.php"
    ],
    "post-install-cmd": [
      "mkdir -p config",
      "cp -R digitoyz/helper/src/config/default.php config/helperConfig.php"
    ]
  }
}
