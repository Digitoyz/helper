{
  "name": "digitoyz/helper",
  "description": "Digitoyz Main Helper",
  "license": "MIT",
  "authors": [
    {
      "name": "Saikaze",
      "email": "saikaze@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "require": {
    "php": ">=5.3.0",
    "joshcam/mysqli-database-class": "^2.5",
    "phpmailer/phpmailer": "~5.2"
  },
  "autoload": {
    "files": ["helper.class.php", "MyClass.php"]
  },

  "scripts": {
    "post-update-cmd": "digitoyz\\MyClass::postUpdate",
    "post-package-install": [
      "digitoyz\\MyClass::postPackageInstall"
    ],
    "post-install-cmd": [
      "digitoyz\\MyClass::warmCache",
      "phpunit -c app/"
    ],
    "post-autoload-dump": [
      "digitoyz\\MyClass::postAutoloadDump"
    ],
    "post-create-project-cmd": [
      "php -r \"copy('config/local-example.php', 'config/local.php');\""
    ]
  }


}
